#!/bin/sh
# actualizador de paguetes para Debian
# actualizar.sh Programado en shell
# boton derecho para dar permisos del ejecucion o desde consola teclemaos: chmod 777 actualizar
# se ejecuta en consola ./actualizar
# Antonio Taboada
# 3 Sept 2016
echo 
echo -e "\e[1;31m[+]\e[0;30m \e[42m** Actualizando Linux. **\e[0m"
echo
dpkg --configure -a
echo -e "\e[1;31m[+]\e[0;30m \e[42m** Actualizando... **\e[0m"
apt-get clean
echo -e "\e[1;31m[+]\e[0;30m \e[42m** Actualizando... **\e[0m"
apt-get update
echo -e "\e[1;31m[+]\e[0;30m \e[42m** Actualizando... **\e[0m"
apt-get upgrade --fix-missing -y
echo -e "\e[1;31m[+]\e[0;30m \e[42m** Actualizando... **\e[0m"
apt-get dist-upgrade -y
echo -e "\e[1;31m[+]\e[0;30m \e[42m** Actualizando... **\e[0m"
apt-get autoremove -y
echo -e "\e[1;31m[+]\e[0;30m \e[42m** Actualizando... **\e[0m"
sudo apt -y autoclean
echo -e "\e[1;31m[+]\e[0;30m \e[42m** Actualizando... **\e[0m"
sudo apt update
echo -e "\e[1;31m[+]\e[0;30m \e[42m** Actualizando... **\e[0m"
sudo apt -f -y install
echo
echo -e "\e[1;31m[+]\e[0;30m \e[42m** Linux actualizado. **\e[0m"
echo
